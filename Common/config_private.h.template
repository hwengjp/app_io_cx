/****************************************************************************/
/***        EI1, EI2 ピンによるチャネル設定の割り当て                    ***/
/****************************************************************************/

/* EI1, EI2 ピンの組み合わせによるチャネル設定
 * 設定値 0: デフォルト/フラッシュ値
 * 設定値 1: CHANNEL_1 を使用
 * 設定値 2: CHANNEL_2 を使用
 * 設定値 3: CHANNEL_3 を使用
 * 
 * 注意: CHANNEL_DEFAULT と CONFIG_DEFAULT_CHANNEL は同じ値を使用します。
 * - CHANNEL_DEFAULT: EI1/EI2ピンによるハードウェア設定で使用（EI1=O, EI2=O の場合）
 * - CONFIG_DEFAULT_CHANNEL: インタラクティブモード/フラッシュメモリのデフォルト値として使用（CHANNEL_DEFAULTと同じ値）
 * 
 * 警告: 以下の値はメーカーのデフォルト値です。このドキュメントでは推奨していません。
 * 標準アプリでよく使用されるチャネルと重複する可能性があるため、他のチャネルを選択することを推奨します。
 */
#define CHANNEL_DEFAULT  16  //!< ハードウェア設定用デフォルトチャネル（EI1=O, EI2=O で使用、au32ChMask_Preset[0]に格納、メーカーデフォルト）
#define CHANNEL_1        12  //!< EI1=G, EI2=O で使用されるチャネル（設定値1、メーカーデフォルト）
#define CHANNEL_2        21  //!< EI1=O, EI2=G で使用されるチャネル（設定値2、メーカーデフォルト）
#define CHANNEL_3        25  //!< EI1=G, EI2=G で使用されるチャネル（設定値3、メーカーデフォルト）

/* チャネルマスク（ビットマスク形式） */
#define CHMASK           ((1UL << CHANNEL_DEFAULT))  //!< デフォルトチャネルマスク（ハードウェア設定用）
#define CHMASK_1         ((1UL << CHANNEL_1))         //!< チャネル1のマスク
#define CHMASK_2         ((1UL << CHANNEL_2))         //!< チャネル2のマスク
#define CHMASK_3         ((1UL << CHANNEL_3))         //!< チャネル3のマスク

/****************************************************************************/
/***        デフォルト設定値                                            ***/
/****************************************************************************/

/* アプリケーションID（32bit） */
#define CONFIG_DEFAULT_APPID           0x67726301UL  //!< デフォルトのアプリケーションID

/* 論理デバイスID */
#define CONFIG_DEFAULT_LOGICALID       1             //!< デフォルトの論理デバイスID

/* チャネル設定 */
/* 注意: CONFIG_DEFAULT_CHANNEL は CHANNEL_DEFAULT と同じ値を使用します。
 * - CONFIG_DEFAULT_CHANNEL: インタラクティブモード/フラッシュメモリのデフォルト値（twesettings_std_defsets.cで使用）
 * - CHANNEL_DEFAULT: EI1/EI2ピンによるハードウェア設定用（au32ChMask_Preset[0]で使用）
 * 
 * 警告: 以下の値はメーカーのデフォルト値です。このドキュメントでは推奨していません。
 * 標準アプリでよく使用されるチャネルと重複する可能性があるため、他のチャネルを選択することを推奨します。
 */
#define CONFIG_DEFAULT_CHANNEL         CHANNEL_DEFAULT  //!< ソフトウェア設定用デフォルトチャネル（インタラクティブモード/フラッシュメモリのデフォルト値、CHANNEL_DEFAULTと同じ値、メーカーデフォルト）
#define CONFIG_DEFAULT_CHANNELS_3      ((1UL << CHANNEL_DEFAULT) >> 11)  //!< デフォルトのチャネル（複数可、CHANNEL_DEFAULTから計算、メーカーデフォルト）

/* 送信出力と再送回数（XY形式: X=再送回数, Y=出力レベル） */
#define CONFIG_DEFAULT_POWER_N_RETRY   0x42          //!< デフォルト: 再送4回, 出力レベル2（中）

/* UARTボーレート（実際のボーレートを100で割った値） */
